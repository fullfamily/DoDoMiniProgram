
.card{
  width: 100%;
  align-items: center;
  /* border-style: groove; */
  background-color: #fff;
  margin: 1%; 
  /* margin-bottom: 20rpx; */
  padding: 5rpx, 10rpx;
  display: inline-block;
  border-bottom: 2rpx groove rgb(238, 231, 231);
}

.card-img{
  width: 99%
}

.card_middle{
  width: 100%;
  height: 80rpx;
  /* background-color: rgb(165, 42, 149); */
  line-height: 40rpx;  /** 垂直居中 **/ 
  font-weight: bold;
  /** 水平居中 **/ 
  /* text-align: center;    */
  letter-spacing: 2rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}
.card_description{
  width: 100rpx;
  /* 超出一行文字自动隐藏 */
  overflow: hidden;
  /* 文字隐藏后添加省略号 */
  text-overflow: ellipsis;
  /* 强制不换行 */
  white-space: nowrap;
}
.card_location{
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 35rpx;
  justify-content: space-between;
  align-items: center;
  /* justify-content: center; */
}

.card_departure {
  margin-left: 5rpx;
  margin-right: 5rpx;
  width: 40%;
  font-size: 34rpx;
  letter-spacing: 5rpx;
  /* 超出一行文字自动隐藏 */
  overflow: hidden;
  /* 文字隐藏后添加省略号 */
  text-overflow: ellipsis;
  /* 强制不换行 */
  white-space: nowrap;
}

